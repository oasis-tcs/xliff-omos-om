    &lt;xlf:source&gt;&lt;!-- text data --&gt;&lt;/xlf:source&gt;
    &lt;xlf:target&gt;&lt;!-- text data --&gt;&lt;/xlf:target&gt;
    &lt;xlf:originalData&gt;
      &lt;xlf:data id="[NMTOKEN]"&gt;
        &lt;xlf:cp hex="[required]"&gt;&lt;!-- text data --&gt;&lt;/xlf:cp&gt;
      &lt;/xlf:data&gt;
    &lt;/xlf:originalData&gt;
    &lt;mda:metadata&gt;
